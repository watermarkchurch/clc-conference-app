{
  "name": "apollos-api",
  "version": "0.1.0",
  "private": true,
  "main": "lib/index.js",
  "scripts": {
    "start":
      "if test \"$NOW_ENV\" = \"true\" ; then yarn start:now ; else yarn start:dev ; fi",
    "start:dev": "nodemon ./src/index.js --exec babel-node --delay 2",
    "start:now": "babel-node ./src/index.js",
    "start:prod": "NODE_ENV=production node ./lib/index.js",
    "build":
      "NODE_ENV=production rm -rf ./lib && mkdir -p lib && babel ./src -d ./lib",
    "test":
      "echo \"No tests in apollos-church-api, all tested code is located in @apollosproject npm modules\"",
    "test:watch": "jest --maxWorkers=2 --watch",
    "lint": "eslint ./src --ext .js",
    "fixlint": "eslint ./src --ext .js --fix",
    "codecov": "cat ./coverage/lcov.info | codecov",
    "release": "standard-version --release-as minor"
  },
  "engines": {
    "node": "^11.6.0"
  },
  "jest": {
    "collectCoverage": true,
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/src/**/?(*.)(spec|test|tests).{js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "reporters": ["<rootDir>/../../scripts/fingers-crossed-reporter.js"]
  },
  "dependencies": {
    "@apollosproject/config": "^0.8.0-alpha.9",
    "@apollosproject/data-connector-analytics": "^0.8.0-alpha.9",
    "@apollosproject/data-connector-cloudinary": "^0.8.0-alpha.9",
    "@apollosproject/data-connector-onesignal": "^0.8.0-alpha.9",
    "@apollosproject/data-schema": "^0.8.0-alpha.9",
    "@apollosproject/server-core": "^0.8.0-alpha.9",
    "apollo-datasource-rest": "^0.3.2",
    "apollo-link-http": "^1.5.11",
    "apollo-server": "^2.0.5",
    "apollo-server-express": "^2.4.2",
    "color": "3.0.0",
    "contentful-resolve-response": "^1.1.4",
    "dotenv": "6.0.0",
    "express": "^4.16.4",
    "graphql": "0.13.2",
    "graphql-tag": "^2.10.1",
    "graphql-tools": "^4.0.4",
    "lodash": "^4.17.11",
    "marked": "^0.6.1",
    "node-fetch": "^2.3.0",
    "prettier": "1.12.1",
    "randomcolor": "0.5.3"
  },
  "devDependencies": {
    "@apollosproject/apollo-server-env-mock": "^0.8.0-alpha.9",
    "@apollosproject/babel-preset-apollos": "^0.8.0-alpha.9",
    "@babel/cli": "7.1.5",
    "@babel/core": "7.1.6",
    "codecov": "3.0.2",
    "nodemon": "1.18.7"
  }
}
